    <%= render partial: '/product/menu'  %>
  </div>
  <div class="col-lg-9 col-xs-10">
    <h4 class="product_title">데크로드</h4>
    <p class="product_sub" style="float: left;"></p>
    <hr>
    <div class="row">
      <div class="col-md-5">
        <div class="flexslider" style="margin-top:20px;">
          <ul class="slides " style=" height:220px;">
            <li >
              <img  src="<%=image_path("con_1-1.jpg")%>" alt="logo"style="width: 80%;height:220px; margin-left:auto; margin-right:auto; "/>
            </li>
            <li>
              <img  src="<%=image_path("con_1-2.jpg")%>" alt="logo"style="width: 80%; height:220px; margin-left:auto; margin-right:auto; "/>
            </li>
