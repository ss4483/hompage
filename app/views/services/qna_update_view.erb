<div class="row"  style="padding-left:40px;">
  <div class="my-margin col-lg-2 col-md-2" style="padding:0px;">
    <%= render partial: '/services/menu'  %>
  </div>
  <div class="col-lg-9 col-md-10">
    <h4 class="product_title">Q & A</h4>
    <hr>
    <h5 style=" margin:20px;"><span style="font-weight:700;font-size:18px !important;">Q. </span>수정하기</h5>
    <form action="/services/qna_update/<%=@one_qna.id%>" method="POST">
      <input name ="utf8" type="hidden", value="✓">
      <input type="hidden" name="authenticity_token", value = "<%=form_authenticity_token %>">
      <div calss="row" style="border-top: 2px solid black; margin:20px; text-align:center;">
        <div class="col-md-2 qna_head_num">
          <b>작성자명</b>
        </div>
        <div class="col-md-4" style="padding:10px; height:40px;" name="name" >
          <input type="text"class="col-xs-12" value="<%=@one_qna.name%>"disabled>
        </div>
        <div class="col-md-2 qna_head">
          <b>비밀번호</b>
        </div>
        <div class="col-md-4" style="padding:10px; height:40px;">
          <input type="text" class="col-xs-12"value="****" disabled>
        </div>
        <br>

        <div class="col-md-2 qna_head_num">
          <b>제목</b>
        </div>
        <div class="col-md-10" style="padding:10px; height:40px;">
          <input type="text" class="col-md-12" name="title" value="<%=@one_qna.title%>">
        </div>


        <div class="col-md-2 qna_head_num" style="height:100%;">
          <b>내용</b>
        </div>
        <div class="col-md-10" style="padding:10px;">
          <textarea class="col-md-12" style="resize: none;" rows="15" name="content"><%=@one_qna.content%></textarea>
        </div>


        <div class="col-md-12">
          <a class="btn btn-default" style="float:right; font-weight:700;" href="/services/qna" role="button">
            취소
          </a>
          <button class="btn btn-default" style="float:right; font-weight:700; margin-right:10px;"  role="button" type="submit" >
            수정하기
          </button>
        </div>
        <div class="col-md-12" style="text-align: center; padding: 20px 10px; border-bottom: 1px solid #e6e6e6; color: #767676; background-color: #fff; margin-bottom:10px">

        </div>
      </div>
    </form>

  </div>
</div>
