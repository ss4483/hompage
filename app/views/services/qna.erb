  <div class="row" style="padding-left:40px;">
    <div class="my-margin col-lg-2 col-md-2" style="padding:0px;">
      <%= render partial: '/services/menu'  %>
    </div>
    <div class="col-lg-9 col-md-10">
      <h4 class="product_title">Q & A</h4>
      <hr>
      <div calss="row" style="border-top: 2px solid black; margin:20px; text-align:center;">
        <div class="col-md-1 qna_head_num">
          <b>번호</b>
        </div>
        <div class="col-md-6 qna_head">
          <b>제목</b>
        </div>
        <div class="col-md-2 qna_head">
          <b>이름</b>
        </div>
        <div class="col-md-3 qna_head">
          <b>날짜</b>
        </div>
        <% if @qnas.blank? %>
        <div class="col-md-12" style="text-align: center; padding: 20px 10px; border-bottom: 1px solid #e6e6e6; color: #767676; background-color: #fff; margin-bottom:10px">
            게시물이 없습니다.
        </div>
        <% else %>
         <% @qnas.reverse.each do |q| %>
         <a class="one_qna " style="color:black"href="one_qna/<%=q.id%>">
           <div class=" col-md-12" style="padding:0px">
             <div class="col-md-1" style=" padding:5px;height:30px;border-bottom:#EBEBEB solid 1px; ">
               <span><%= q.id%></span>
             </div>
             <div class="col-md-6" style="text-align:left; padding:5px;height:30px; border-left:#EBEBEB solid 1px;border-bottom:#EBEBEB solid 1px;">
              <span ><%= q.title %></span>
             </div>
             <div class="col-md-2" style=" padding:5px;height:30px; border-left:#EBEBEB solid 1px;border-bottom:#EBEBEB solid 1px;">
               <b ><%= q.name %></b>
             </div>
             <div class="col-md-3" style=" padding:5px;height:30px; border-left:#EBEBEB solid 1px;border-bottom:#EBEBEB solid 1px; ">
               <span ><%= q.updated_at.strftime("%Y.%m.%d") %></span>
             </div>
           </div>
          </a>
         <%end%>
       <%end%>
        <div class="col-md-12">
          <a class="btn btn-default" style="float:right; font-weight:700; margin: 10px;" href="/qna_write_view" role="button">
            글쓰기
          </a>
        </div>
      </div>
    </div>
    <div class="quick_box hidden-xs hidden-sm" style="float:right; width:48px; margin-right:10px;">
      <div class="quick"><%= render partial: '/home/quick'  %></div>
    </div>
  </div>




<% if flash[:notice] %>
<div  id="qna_alert" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">알림</h4>
      </div>
      <div class="modal-body">
        <%= flash[:notice] %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



  <script>
  $(function(){
    $('#qna_alert').modal('show')
  });
  </script>
<% end %>
